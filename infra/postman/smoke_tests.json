  "item": [
    {
      "name": "Health Check",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/health",
          "host": ["{{base_url}}"],
          "path": ["health"]
        }
      }
    },
    {
      "name": "Root Endpoint",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/",
          "host": ["{{base_url}}"],
          "path": [""]
        }
      }
    },
    {
      "name": "Create Journal Entry",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"id\": \"test-entry-1\",\n  \"user_id\": \"test-user\",\n  \"content\": \"This is a test journal entry\",\n  \"mood\": \"good\",\n  \"tags\": [\"test\"]\n}"
        },
        "url": {
          "raw": "{{base_url}}/journal/entries",
          "host": ["{{base_url}}"],
          "path": ["journal", "entries"]
        }
      }
    },
    {
      "name": "Get Journal Entries",
      "request": {
        "method": "GET",
        "header": [],
        "url": {
          "raw": "{{base_url}}/journal/entries?user_id=test-user&limit=10",
          "host": ["{{base_url}}"],
          "path": ["journal", "entries"],
          "query": [
            {
              "key": "user_id",
              "value": "test-user"
            },
            {
              "key": "limit",
              "value": "10"
            }
          ]
        }
      }
    },
    {
